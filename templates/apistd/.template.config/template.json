{
  "$schema": "http://json.schemastore.org/template",
  "author": "ater.niltor",
  "classifications": [
    "Web",
    "WebAPI",
    "Framework"
  ],
  "identity": "Ater.Web.Framework",
  "name": "Ater Web API ",
  "shortName": "atapi",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "MyProjectName",
  "preferNameDirectory": true,
  "symbols": {
    "grpc": {
      "type": "parameter",
      "defaultValue": "false",
      "datatype": "bool",
      "description": "Enable gRPC API"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(grpc)",
          "exclude": [
            "src/Http.API/**"
          ]
        },
        {
          "condition": "(!grpc)",
          "exclude": [
            "src/Grpc.API/**"
          ]
        }
      ]
    }
  ]
}